---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get related posts
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug)
  .filter(p => p.data.tags?.some(tag => post.data.tags?.includes(tag)))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);
---

<BaseLayout 
  title={post.data.title}
  description={post.data.description}
  image={post.data.image}
>
  <article class="bg-white dark:bg-gray-800">
    <!-- Hero Section -->
    {post.data.image && (
      <div class="relative h-96 bg-gray-900">
        <img 
          src={post.data.image} 
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="text-center text-white">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">{post.data.title}</h1>
            <p class="text-xl opacity-90">{post.data.description}</p>
          </div>
        </div>
      </div>
    )}

    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Article Header -->
      {!post.data.image && (
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
            {post.data.title}
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
            {post.data.description}
          </p>
        </div>
      )}

      <!-- Article Meta -->
      <div class="flex flex-wrap items-center justify-center text-sm text-gray-500 dark:text-gray-400 mb-8 space-x-4">
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        {post.data.readingTime && (
          <span>{post.data.readingTime} min read</span>
        )}
        {post.data.author && (
          <span>by {post.data.author}</span>
        )}
      </div>

      <!-- Tags -->
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 justify-center mb-8">
          {post.data.tags.map(tag => (
            <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-sm font-medium">
              {tag}
            </span>
          ))}
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-lg dark:prose-invert max-w-none">
        <Content />
      </div>

      <!-- Share Section -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <div class="text-center">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Share this post
          </h3>
          <div class="flex justify-center space-x-4">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-500 transition-colors"
            >
              <span class="sr-only">Twitter</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            </a>
            <a 
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-600 transition-colors"
            >
              <span class="sr-only">Facebook</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
              </svg>
            </a>
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-700 transition-colors"
            >
              <span class="sr-only">LinkedIn</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Related Posts -->
      {relatedPosts.length > 0 && (
        <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
            Related Posts
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {relatedPosts.map((relatedPost) => (
              <article class="bg-gray-50 dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                {relatedPost.data.image && (
                  <img 
                    src={relatedPost.data.image} 
                    alt={relatedPost.data.title}
                    class="w-full h-32 object-cover"
                  />
                )}
                <div class="p-4">
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                    <a href={`/blog/${relatedPost.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {relatedPost.data.title}
                    </a>
                  </h4>
                  <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
                    {relatedPost.data.description}
                  </p>
                </div>
              </article>
            ))}
          </div>
        </div>
      )}
    </div>
  </article>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 