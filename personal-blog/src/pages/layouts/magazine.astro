---
import MagazineLayout from '../../layouts/MagazineLayout.astro';
import { getCollection } from 'astro:content';

// Get blog posts for featured section
const posts = await getCollection('blog');
const featuredPosts = posts
  .filter(post => post.data.featured)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

const recentPosts = posts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 6);
---

<MagazineLayout title="Magazine Layout Demo">
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-900 to-gray-800 text-white py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">
          Magazine
          <span class="text-primary-400">Style</span>
        </h1>
        <p class="text-2xl text-gray-300 mb-8 max-w-4xl mx-auto">
          Dynamic grid layout with featured content highlights. 
          Perfect for content-rich blogs and digital magazines.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/layouts/classic" class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold transition-colors text-lg">
            View Classic Layout
          </a>
          <a href="/layouts/portfolio" class="border-2 border-white text-white hover:bg-white hover:text-gray-900 px-8 py-4 rounded-lg font-semibold transition-colors text-lg">
            View Portfolio Layout
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Grid -->
  {featuredPosts.length > 0 && (
    <section class="py-20 bg-white dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Featured Stories
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            Magazine-style grid with prominent featured content
          </p>
        </div>
        
        <!-- Large Featured Post -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
          <div class="lg:col-span-2">
            <article class="bg-gray-50 dark:bg-gray-700 rounded-xl overflow-hidden shadow-2xl hover:shadow-3xl transition-shadow">
              {featuredPosts[0]?.data.image && (
                <img 
                  src={featuredPosts[0].data.image} 
                  alt={featuredPosts[0].data.title}
                  class="w-full h-96 object-cover"
                />
              )}
              <div class="p-8">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-4">
                  <time datetime={featuredPosts[0]?.data.pubDate.toISOString()}>
                    {featuredPosts[0]?.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  {featuredPosts[0]?.data.tags && (
                    <span class="ml-4 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-3 py-1 rounded-full text-xs">
                      {featuredPosts[0].data.tags[0]}
                    </span>
                  )}
                </div>
                <h3 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                  <a href={`/blog/${featuredPosts[0]?.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                    {featuredPosts[0]?.data.title}
                  </a>
                </h3>
                <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
                  {featuredPosts[0]?.data.description}
                </p>
                <a 
                  href={`/blog/${featuredPosts[0]?.slug}`}
                  class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold transition-colors text-lg"
                >
                  Read full story →
                </a>
              </div>
            </article>
          </div>
          
          <!-- Sidebar Posts -->
          <div class="space-y-8">
            {featuredPosts.slice(1, 3).map((post) => (
              <article class="bg-gray-50 dark:bg-gray-700 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                {post.data.image && (
                  <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                    <time datetime={post.data.pubDate.toISOString()}>
                      {post.data.pubDate.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                  </div>
                  <h4 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                    <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                      {post.data.title}
                    </a>
                  </h4>
                  <p class="text-gray-600 dark:text-gray-300 text-sm line-clamp-2">
                    {post.data.description}
                  </p>
                </div>
              </article>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Magazine Grid -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Latest Articles
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Magazine-style grid layout for content discovery
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post, index) => (
          <article class={`bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow ${
            index === 0 ? 'md:col-span-2 lg:col-span-1' : ''
          }`}>
            {post.data.image && (
              <img 
                src={post.data.image} 
                alt={post.data.title}
                class="w-full h-64 object-cover"
              />
            )}
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.data.tags && (
                  <span class="ml-3 bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 px-2 py-1 rounded text-xs">
                    {post.data.tags[0]}
                  </span>
                )}
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
                <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                  {post.data.title}
                </a>
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                {post.data.description}
              </p>
              <a 
                href={`/blog/${post.slug}`}
                class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold transition-colors"
              >
                Read more →
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Layout Features -->
  <section class="py-20 bg-white dark:bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">
            Magazine Design Philosophy
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-300 mb-6">
            The Magazine layout uses dynamic grids and visual hierarchy to create 
            an engaging reading experience. It's perfect for content creators who 
            want to showcase multiple stories and features.
          </p>
          <p class="text-gray-600 dark:text-gray-300 mb-8">
            With its prominent featured content and sidebar highlights, 
            this layout encourages exploration and discovery.
          </p>
          <div class="flex space-x-4">
            <a 
              href="/layouts/minimalist" 
              class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-semibold transition-colors"
            >
              View Minimalist Layout
              <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-lg p-8 text-white">
            <h3 class="text-2xl font-bold mb-4">Layout Features</h3>
            <ul class="space-y-3">
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Dynamic grid layouts
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Featured content highlights
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Visual content hierarchy
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Content discovery focus
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</MagazineLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style> 