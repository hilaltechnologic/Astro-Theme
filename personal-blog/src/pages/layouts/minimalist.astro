---
import MinimalistLayout from '../../layouts/MinimalistLayout.astro';
import { getCollection } from 'astro:content';

// Get blog posts for featured section
const posts = await getCollection('blog');
const featuredPosts = posts
  .filter(post => post.data.featured)
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 3);

const recentPosts = posts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 6);
---

<MinimalistLayout title="Minimalist Layout Demo">
  <!-- Hero Section -->
  <section class="py-24 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-light text-gray-900 dark:text-white mb-8">
          Minimalist
          <span class="text-primary-600 dark:text-primary-400">Design</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-2xl mx-auto leading-relaxed">
          Clean, uncluttered design that focuses on content and typography. 
          Perfect for writers, thinkers, and minimalists.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/layouts/classic" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-light transition-colors text-lg">
            View Classic Layout
          </a>
          <a href="/layouts/magazine" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-light transition-colors text-lg">
            View Magazine Layout
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content -->
  {featuredPosts.length > 0 && (
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-light text-gray-900 dark:text-white mb-4">
            Featured
          </h2>
          <p class="text-gray-600 dark:text-gray-400">
            Essential content with minimal distraction
          </p>
        </div>
        
        <div class="space-y-16">
          {featuredPosts.map((post) => (
            <article class="border-b border-gray-200 dark:border-gray-700 pb-16">
              <div class="mb-8">
                <time datetime={post.data.pubDate.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
                {post.data.tags && (
                  <span class="ml-4 text-sm text-gray-500 dark:text-gray-400">
                    {post.data.tags[0]}
                  </span>
                )}
              </div>
              
              <h3 class="text-3xl font-light text-gray-900 dark:text-white mb-6">
                <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
                {post.data.description}
              </p>
              
              <a 
                href={`/blog/${post.slug}`}
                class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 font-light transition-colors"
              >
                Continue reading â†’
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Recent Posts -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-light text-gray-900 dark:text-white mb-4">
          Recent
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Latest thoughts and ideas
        </p>
      </div>
      
      <div class="space-y-12">
        {recentPosts.map((post) => (
          <article class="border-b border-gray-100 dark:border-gray-800 pb-12">
            <div class="mb-4">
              <time datetime={post.data.pubDate.toISOString()} class="text-sm text-gray-500 dark:text-gray-400">
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              {post.data.tags && (
                <span class="ml-4 text-sm text-gray-500 dark:text-gray-400">
                  {post.data.tags[0]}
                </span>
              )}
            </div>
            
            <h3 class="text-2xl font-light text-gray-900 dark:text-white mb-4">
              <a href={`/blog/${post.slug}`} class="hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
                {post.data.title}
              </a>
            </h3>
            
            <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
              {post.data.description}
            </p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div>
          <h2 class="text-3xl font-light text-gray-900 dark:text-white mb-8">
            Minimalist Philosophy
          </h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-6 leading-relaxed">
            The Minimalist layout strips away unnecessary elements to focus on 
            what matters most: your content. It uses generous whitespace, 
            clean typography, and subtle interactions.
          </p>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
            Perfect for writers, philosophers, and anyone who values clarity 
            and simplicity in their digital presence.
          </p>
        </div>
        
        <div class="space-y-8">
          <div class="border-l-4 border-primary-600 pl-8">
            <h3 class="text-xl font-light text-gray-900 dark:text-white mb-4">
              Clean Typography
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Generous line spacing and carefully chosen fonts for optimal readability.
            </p>
          </div>
          
          <div class="border-l-4 border-primary-600 pl-8">
            <h3 class="text-xl font-light text-gray-900 dark:text-white mb-4">
              Whitespace
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Abundant whitespace to give your content room to breathe.
            </p>
          </div>
          
          <div class="border-l-4 border-primary-600 pl-8">
            <h3 class="text-xl font-light text-gray-900 dark:text-white mb-4">
              Focus
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              Minimal distractions to keep readers focused on your message.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Layout Comparison -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-light text-gray-900 dark:text-white mb-4">
          Choose Your Style
        </h2>
        <p class="text-gray-600 dark:text-gray-400">
          Each layout serves different purposes and audiences
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <a href="/layouts/classic" class="group">
          <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-primary-300 dark:hover:border-primary-600 transition-colors">
            <h3 class="text-lg font-light text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              Classic
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Traditional blog layout with familiar structure
            </p>
          </div>
        </a>
        
        <a href="/layouts/magazine" class="group">
          <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-primary-300 dark:hover:border-primary-600 transition-colors">
            <h3 class="text-lg font-light text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              Magazine
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Dynamic grid layout for content discovery
            </p>
          </div>
        </a>
        
        <a href="/layouts/portfolio" class="group">
          <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-6 hover:border-primary-300 dark:hover:border-primary-600 transition-colors">
            <h3 class="text-lg font-light text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
              Portfolio
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Professional showcase for work and skills
            </p>
          </div>
        </a>
        
        <a href="/layouts/minimalist" class="group">
          <div class="border border-primary-300 dark:border-primary-600 rounded-lg p-6">
            <h3 class="text-lg font-light text-primary-600 dark:text-primary-400 mb-2">
              Minimalist
            </h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">
              Clean, focused design for content-first approach
            </p>
          </div>
        </a>
      </div>
    </div>
  </section>
</MinimalistLayout> 