---

<BaseLayout title="Theme Comparison" description="Compare our comprehensive Astro blog theme with competitors">
  <!-- SEO Head -->
  <SEOHead 
    title="Theme Comparison"
    description="Compare our comprehensive Astro blog theme with competitors - 58 features vs 15-30 features"
    image="/comparison-og.jpg"
    type="website"
    tags={['comparison', 'features', 'astro', 'blog', 'theme']}
  />

  <!-- Performance Monitor -->
  <PerformanceMonitor />

  <!-- Accessibility -->
  <Accessibility />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-gray-900 dark:text-white mb-6">
          Theme
          <span class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 bg-clip-text text-transparent">
            Comparison
          </span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-4xl mx-auto">
          See how our comprehensive Astro blog theme compares to competitors. 
          With 58 features vs 15-30 features, the choice is clear.
        </p>
        
        <!-- Key Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <div class="text-3xl font-bold text-blue-600 mb-2">58</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Our Features</div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <div class="text-3xl font-bold text-gray-600 mb-2">15-30</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Competitor Features</div>
          </div>
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <div class="text-3xl font-bold text-green-600 mb-2">3x</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">More Value</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Feature Comparison Table -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        📊 Feature Comparison
      </h2>
      
      <div class="overflow-x-auto">
        <table class="w-full bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <thead>
            <tr class="border-b border-gray-200 dark:border-gray-700">
              <th class="text-left p-4 font-semibold text-gray-900 dark:text-white">Feature</th>
              <th class="text-center p-4 font-semibold text-blue-600">Our Theme</th>
              <th class="text-center p-4 font-semibold text-gray-600">Competitor 1</th>
              <th class="text-center p-4 font-semibold text-gray-600">Competitor 2</th>
              <th class="text-center p-4 font-semibold text-gray-600">Competitor 3</th>
            </tr>
          </thead>
          <tbody>
            {comparisonData.map((row, index) => (
              <tr class={`border-b border-gray-200 dark:border-gray-700 ${row.highlight ? 'bg-blue-50 dark:bg-blue-900/20' : ''}`}>
                <td class="p-4 font-medium text-gray-900 dark:text-white">
                  {row.feature}
                </td>
                <td class="p-4 text-center">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                    {row.ourTheme}
                  </span>
                </td>
                <td class="p-4 text-center text-gray-600 dark:text-gray-400">
                  {row.competitor1}
                </td>
                <td class="p-4 text-center text-gray-600 dark:text-gray-400">
                  {row.competitor2}
                </td>
                <td class="p-4 text-center text-gray-600 dark:text-gray-400">
                  {row.competitor3}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Pricing Comparison -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        💰 Pricing Comparison
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {pricingComparison.map((theme, index) => (
          <div class={`bg-white dark:bg-gray-800 rounded-lg p-6 border-2 ${
            index === 0 
              ? 'border-blue-500 bg-blue-50 dark:bg-blue-900/20' 
              : 'border-gray-200 dark:border-gray-700'
          }`}>
            <div class="text-center">
              <h3 class={`text-lg font-semibold mb-2 ${
                index === 0 ? 'text-blue-600' : 'text-gray-900 dark:text-white'
              }`}>
                {theme.theme}
              </h3>
              <div class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                {theme.price}
              </div>
              
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Features:</span>
                  <span class="font-medium">{theme.features}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Support:</span>
                  <span class="font-medium">{theme.support}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Updates:</span>
                  <span class="font-medium">{theme.updates}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600 dark:text-gray-400">Value:</span>
                  <span class={`font-medium ${
                    theme.value === 'Exceptional' ? 'text-green-600' :
                    theme.value === 'Good' ? 'text-blue-600' :
                    theme.value === 'Standard' ? 'text-yellow-600' : 'text-gray-600'
                  }`}>
                    {theme.value}
                  </span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Performance Comparison -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        ⚡ Performance Comparison
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {performanceComparison.map((metric, index) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg p-6 border border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 text-center">
              {metric.metric}
            </h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400">Our Theme:</span>
                <span class="font-semibold text-green-600">{metric.ourTheme}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400">Comp 1:</span>
                <span class="font-semibold text-yellow-600">{metric.competitor1}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400">Comp 2:</span>
                <span class="font-semibold text-blue-600">{metric.competitor2}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-600 dark:text-gray-400">Comp 3:</span>
                <span class="font-semibold text-red-600">{metric.competitor3}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Value Proposition -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        🎯 Why Choose Our Theme?
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-xl p-6">
          <div class="text-3xl mb-4">🚀</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Most Comprehensive
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            With 58 features vs 15-30 features from competitors, our theme offers the most complete solution for Astro blogs.
          </p>
        </div>
        
        <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-900/20 dark:to-emerald-900/20 rounded-xl p-6">
          <div class="text-3xl mb-4">⚡</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Best Performance
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Optimized for Core Web Vitals with 95+ Lighthouse scores and advanced performance monitoring.
          </p>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl p-6">
          <div class="text-3xl mb-4">🎨</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-3">
            Most Flexible
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Multiple layout options, advanced customization, and comprehensive documentation for easy implementation.
          </p>
        </div>
      </div>
    </section>

    <!-- Competitive Advantages -->
    <section class="mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        🏆 Competitive Advantages
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            ✅ What We Have That Others Don't
          </h3>
          <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Advanced SEO with structured data
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Real-time performance monitoring
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Service worker with offline support
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              WCAG 2.1 AA accessibility compliance
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Advanced image optimization
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Interactive content features
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Privacy-friendly analytics
            </li>
            <li class="flex items-center">
              <span class="text-green-500 mr-2">✓</span>
              Comprehensive documentation
            </li>
          </ul>
        </div>
        
        <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            ❌ What Others Lack
          </h3>
          <ul class="space-y-2 text-sm text-gray-600 dark:text-gray-300">
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Limited feature sets (15-30 features)
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Basic SEO without structured data
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              No performance monitoring
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Limited accessibility features
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              No service worker support
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Basic image optimization
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Limited interactive features
            </li>
            <li class="flex items-center">
              <span class="text-red-500 mr-2">✗</span>
              Minimal documentation
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>

  <!-- Call to Action -->
  <section class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Ready to Experience the Difference?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-3xl mx-auto">
        Don't settle for basic themes. Choose the most comprehensive Astro blog theme 
        with 58 features and premium support.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/demo" 
          class="bg-white text-blue-600 hover:bg-gray-100 px-8 py-4 rounded-lg font-semibold transition-colors text-lg"
        >
          View Complete Demo
        </a>
        <a 
          href="/showcase" 
          class="border-2 border-white text-white hover:bg-white hover:text-blue-600 px-8 py-4 rounded-lg font-semibold transition-colors text-lg"
        >
          Feature Showcase
        </a>
      </div>
    </div>
  </section>

  <!-- Service Worker -->
  <ServiceWorker />
  
  <!-- Analytics -->
  <Analytics gaId="G-XXXXXXXXXX" gtmId="GTM-XXXXXXXX" privacyMode={true} />
</BaseLayout> 