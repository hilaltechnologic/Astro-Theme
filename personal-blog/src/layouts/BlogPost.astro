---
import BaseLayout from './BaseLayout.astro';
import { format } from 'date-fns';
import readingTime from 'reading-time';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate?: Date;
    heroImage?: string;
    tags?: string[];
  };
  rawContent: string;
}

const { frontmatter, rawContent } = Astro.props;
const { title, description, pubDate, updatedDate, heroImage, tags } = frontmatter;

const stats = readingTime(rawContent);
const formattedDate = format(pubDate, 'MMMM dd, yyyy');
const formattedUpdatedDate = updatedDate ? format(updatedDate, 'MMMM dd, yyyy') : null;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <div class="min-h-screen bg-white dark:bg-gray-800">
    <!-- Header -->
    <header class="bg-gradient-to-r from-primary-600 to-secondary-600 text-white">
      <div class="container mx-auto px-4 py-16">
        <div class="max-w-4xl mx-auto">
          <nav class="mb-8">
            <a href="/" class="text-white/80 hover:text-white transition-colors">
              ‚Üê Back to Home
            </a>
          </nav>
          
          <div class="space-y-4">
            <div class="flex flex-wrap gap-2">
              {tags?.map((tag) => (
                <span class="px-3 py-1 bg-white/20 rounded-full text-sm font-medium">
                  {tag}
                </span>
              ))}
            </div>
            
            <h1 class="text-4xl md:text-5xl font-bold leading-tight">
              {title}
            </h1>
            
            <p class="text-xl text-white/90 leading-relaxed">
              {description}
            </p>
            
            <div class="flex items-center gap-6 text-white/80 text-sm">
              <span>üìÖ {formattedDate}</span>
              <span>‚è±Ô∏è {stats.text}</span>
              {formattedUpdatedDate && (
                <span>üîÑ Updated {formattedUpdatedDate}</span>
              )}
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
      <article class="max-w-4xl mx-auto">
        {heroImage && (
          <div class="mb-8">
            <img 
              src={heroImage} 
              alt={title}
              class="w-full h-64 md:h-96 object-cover rounded-lg shadow-lg"
            />
          </div>
        )}
        
        <div class="prose prose-lg max-w-none prose-headings:text-gray-900 prose-headings:dark:text-white prose-p:text-gray-700 prose-p:dark:text-gray-300 prose-a:text-primary-600 prose-a:dark:text-primary-400 prose-strong:text-gray-900 prose-strong:dark:text-white prose-code:text-secondary-600 prose-code:dark:text-secondary-400">
          <slot />
        </div>
        
        <!-- Social Sharing -->
        <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Share this post
          </h3>
          <div class="flex gap-4">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
              Share on Twitter
            </a>
            
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              Share on LinkedIn
            </a>
          </div>
        </div>
      </article>
    </main>
  </div>
</BaseLayout> 