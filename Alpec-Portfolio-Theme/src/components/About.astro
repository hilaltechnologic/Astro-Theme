  /* Stats animation */
  [data-count] {
    background: linear-gradient(45deg, var(--color-accent-cyan), var(--color-accent-purple));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>
