---
export interface Props {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  liveUrl?: string;
  githubUrl?: string;
  category: string;
  featured?: boolean;
}

const { title, description, image, technologies, liveUrl, githubUrl, category, featured = false } = Astro.props;
---

<div class={`project-card group relative overflow-hidden rounded-xl cyber-border transition-all duration-500 hover:scale-105 ${featured ? 'featured-project' : ''}`}>
  <!-- Project Image -->
  <div class="relative overflow-hidden">
    <img 
      src={image} 
      alt={title}
      class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-dark-900/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Category Badge -->
    <div class="absolute top-4 left-4">
      <span class="px-3 py-1 text-xs font-medium bg-accent-cyan/20 text-accent-cyan rounded-full backdrop-blur-sm border border-accent-cyan/30">
        {category}
      </span>
    </div>
    
    <!-- Featured Badge -->
    {featured && (
      <div class="absolute top-4 right-4">
        <span class="px-3 py-1 text-xs font-medium bg-accent-purple/20 text-accent-purple rounded-full backdrop-blur-sm border border-accent-purple/30 animate-pulse">
          Featured
        </span>
      </div>
    )}
    
    <!-- Overlay Links -->
    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
      <div class="flex space-x-4">
        {liveUrl && (
          <a 
            href={liveUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center w-12 h-12 bg-accent-cyan/20 hover:bg-accent-cyan/30 rounded-full backdrop-blur-sm border border-accent-cyan/30 transition-all duration-300 hover:scale-110 glow-effect"
            aria-label={`View ${title} live demo`}
          >
            <svg class="w-5 h-5 text-accent-cyan" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        )}
        {githubUrl && (
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center w-12 h-12 bg-accent-purple/20 hover:bg-accent-purple/30 rounded-full backdrop-blur-sm border border-accent-purple/30 transition-all duration-300 hover:scale-110 glow-effect"
            aria-label={`View ${title} source code`}
          >
            <svg class="w-5 h-5 text-accent-purple" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
      </div>
    </div>
  </div>
  
  <!-- Project Content -->
  <div class="p-6 glass-effect">
    <h3 class="text-xl font-bold text-white mb-2 group-hover:text-gradient transition-all duration-300">
      {title}
    </h3>
    <p class="text-gray-300 text-sm mb-4 line-clamp-3">
      {description}
    </p>
    
    <!-- Technologies -->
    <div class="flex flex-wrap gap-2 mb-4">
      {technologies.map((tech) => (
        <span class="px-2 py-1 text-xs bg-dark-700/50 text-gray-300 rounded border border-gray-600/30 hover:border-accent-cyan/50 transition-colors duration-300">
          {tech}
        </span>
      ))}
    </div>
    
    <!-- Action Links -->
    <div class="flex items-center justify-between">
      <div class="flex space-x-3">
        {liveUrl && (
          <a 
            href={liveUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-accent-cyan hover:text-accent-cyan/80 text-sm font-medium transition-colors duration-300 flex items-center space-x-1"
          >
            <span>Live Demo</span>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        )}
        {githubUrl && (
          <a 
            href={githubUrl} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-accent-purple hover:text-accent-purple/80 text-sm font-medium transition-colors duration-300 flex items-center space-x-1"
          >
            <span>Source</span>
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        )}
      </div>
      
      <!-- View Details Button -->
      <button class="text-gray-400 hover:text-white text-sm transition-colors duration-300 flex items-center space-x-1 group/btn">
        <span>Details</span>
        <svg class="w-3 h-3 transform group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<style>
  .project-card {
    background: rgba(15, 23, 42, 0.6);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .project-card:hover {
    background: rgba(15, 23, 42, 0.8);
    border-color: rgba(0, 255, 255, 0.3);
    box-shadow: 0 10px 40px rgba(0, 255, 255, 0.1);
  }
  
  .featured-project {
    border-color: rgba(139, 92, 246, 0.3);
  }
  
  .featured-project:hover {
    border-color: rgba(139, 92, 246, 0.5);
    box-shadow: 0 10px 40px rgba(139, 92, 246, 0.15);
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
